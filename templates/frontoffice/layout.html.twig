<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <title id='page_title'>Multitap : {% block title %}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="css/style.css" />
        <script src="https://kit.fontawesome.com/b524cca034.js" crossorigin="anonymous"></script>
    </head>

    <body>

        <header>
            <!-- Navigation -->
            <nav>
                <div class="navbar">
                    <span><i class="fas fa-home"></i><a href='index.php'>ACCUEIL</a></span>
                    <span>|</span>
                    <span><i class="fas fa-gamepad"></i><a href='index.php?action=all_reviews&page=1'>LES REVIEWS</a></span>
                    <span>|</span>
                    {% if session.username == false %}
                        <span><i class="fas fa-user"></i><a href='index.php?action=logInPage'>ME CONNECTER</a></span>
                        <span>|</span>
                        <span><i class="fas fa-clipboard-list"></i><a href='index.php?action=signInPage'>M'INSCRIRE</a></span>
                        {% elseif session.username == true %}
                            <span><i class="fas fa-sign-out-alt"></i><a href="index.php?action=logout">ME DECONNECTER</a></span>
                            <span>|</span>
                            <span><i class="fas fa-unlock-alt"></i><a href={% if session.userRank == 'ROLE_MEMBER' %}"index.php?action=role_member_page"{% endif %}"index.php?action=dashboard">{{ session.username }}</a></span>
                    {% endif %}
                </div>
            </nav>
            <div id="banner">
                {% block banner %}{% endblock %}
            </div>

            {% block reviewTitle %}{% endblock %}
        </header>

        <main>
            {% block content %}{% endblock %}
        </main>
        
        <script src='js/Games.js'></script>
        {% block script %}{% endblock %}

    </body>


</html>
