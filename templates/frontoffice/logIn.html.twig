{% extends "/frontoffice/layout.html.twig" %}

{% block title %}Connexion{% endblock %}

{% block content %}

<form action="index.php?action=log-in" method='post' id="login_form">
    <fieldset>
        <legend>Se connecter</legend>
        <div class='label_and_input'>
            <label for="username">Nom d'utilisateur</label>
            <input class='username_input' type="text" name='username'
                required
                minlength='2'
                maxlength='50'>
        </div>
        <div class='label_and_input'>
            <label for="password">Mot de passe</label>
            <input class='password_input' type="password" name='password'
                required
                minlength='8'>
        </div>
        <input class='login_button' type="submit" value="Se connecter">
        <input type="hidden" name='hidden_input_token' class="hidden_input_token" value={{ session.token }}>
    </fieldset>

    {% if session.flashMessage == true %}
        <p>{{ session.flashMessage }}</p>
    {% endif %}
    
    <p><a href="index.php?action=forgottenPassword">Mot de passe oubli√© ?</a> | <a href='index.php?action=changePassword'>Modifier mon mot de passe</a></p>
</form>

{% endblock %}